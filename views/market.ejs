<main class="marketplace">
    <header class="top-search">
        <form action="/marketplace" method="GET">
       <div class="searchdiv sea1">
        <input type="text" placeholder="search..." name="search" value="<%= query.search || '' %>">
        <button type="submit" class="ico">
            <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#1f1f1f"><path d="M784-120 532-372q-30 24-69 38t-83 14q-109 0-184.5-75.5T120-580q0-109 75.5-184.5T380-840q109 0 184.5 75.5T640-580q0 44-14 83t-38 69l252 252-56 56ZM380-400q75 0 127.5-52.5T560-580q0-75-52.5-127.5T380-760q-75 0-127.5 52.5T200-580q0 75 52.5 127.5T380-400Z"/></svg>
        </button>     
       <div class="slt">
        <select name="type" id="type">
            <option value="">All products</option>
            <option value="waste-product" <%= query.type === 'waste-product' ? 'selected' : '' %> >Raw waste</option>
                <option value="recycled-waste" <%= query.type === 'recycled-waste' ? 'selected' : '' %> >Recycled waste</option>
                <option value="recycled-product" <%= query.type === 'recycled-product' ? 'selected' : '' %> >Finished recycled goods</option>
        </select>
        <button type="submit">search</button>
       </div>
        </form>

    </div>
    </header>
    <div class="hero">
    <h1>welcome to the marketplace</h1>
    <p>choose from variety of products to purchase from</p>
    </div>
    <section class="top ">
        <h2>TOP LISTINGS</h2>
        <div class="products">
       <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
            <div class="product-card" >
    <div class="product-image">
        <% if (product.filePath) { %>
         <img src="<%= product.filePath %> " alt="" srcset="" class="product">
        <% }else{ %>
        <img src="../images/img.png" alt="" class="product">
        <% } %>
    </div>
    <div class="product-desc">
      <div class="product-desc" onclick="location.href='/product/<%= product._id%>'">
        <span><%= product.name  %> </span>
        <div class="descs"><span class="addrs"><%= product.type  %> </span><div class="desc-text"><%= product.desc  %> </div></div>
        <span class="amt"><% if (product.qty) { %>
         <%= product.qty  %>kg
        <% }else{ %>
             0 kg
            <% } %> </span>
        <span class="price"># <%= product.price %> </span>
        <span class="rate"></span>
        <button class="active-check">ACTIVE</button>
     </div>
