     <style>
    .show{
        display: flex;
    }
    input, textarea{
      border: 2px #aaa solid;
      width: 350px;
      height: 3rem;
      font-size: 1.1rem;
      padding:20px 10px;
      color: #aaa;
      display: flex;
      flex-direction: column;
      align-items: center;
      outline: none;
      border-radius: 10px;
    }
    button{
        padding: 15px 10px;
        outline: none;
        border: none;
        background: #223a22;
        width: 150px;
        border-radius: 10px;
        color: #fff;
        cursor: pointer;
    }
    .profile-info, .profile-form{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom:20px;
        justify-content: center;
    }
    .profile-info input , .profile-info textarea{
        cursor: default;
    }
    .form-field{
        margin-bottom:20px;
    }
    #edit{
        margin-top: 20px;
    }
    </style>
        <div class="profile-info">
            <h1>My Profile</h1>
 <input type="text" value="<% if (user.username) { %><%= user.username %><% } %>"  readonly>    
 <input type="text" value="<% if (user.company) { %><%= user.company %><% } %>"  readonly>    
 <input type="text" value="<% if (user.level) { %><%= user.level %><% } %>"  readonly >    
 <input type="text" value="<% if (user.email) { %><%= user.email %><% } %>"  readonly >    
 <input type="text" value="<% if (user.tel) { %><%= user.tel %><% } %>"  readonly >    
 <textarea type="text" value="<% if (user.address) { %><%= user.address %><% } %>" readonly ></textarea>    
<button onclick="location.href='/profile/edit'">edit profile</button>
</div>
    
