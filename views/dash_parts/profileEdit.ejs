<link rel="stylesheet" href="../css/styles.css">
<style>
    input, textarea{
      border: 2px #aaa solid;
      width: 350px;
      height: 3rem;
      font-size: 1.1rem;
      padding:20px 10px;
      color: #aaa;
      display: flex;
      flex-direction: column;
      align-items: center;
      outline: none;
      border-radius: 10px;
    }
    button{
        padding: 15px 10px;
        outline: none;
        border: none;
        background: #223a22;
        width: 150px;
        border-radius: 10px;
        color: #fff;
        cursor: pointer;
    }
   .profile-form{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom:20px;
        justify-content: center;
        margin: 10vw auto;
        border:3px solid #021a09 ;
        border-radius: 10px ;
        padding: 10px 15px;
        height: fit-content;
    }
    .profile-info input , .profile-info textarea{
        cursor: default;
    }
    h2{
        text-transform: capitalize;
    }
    .form-field{
        margin-bottom:20px;
    }
    #edit{
        margin-top: 20px;
    }
    dialog.pop{
        padding: 0;
        background-color: azure;
        border:0 ;
        border-radius: 10px;
        min-height:fit-content;
        max-height: 250px;
        min-width: fit-content;
        max-width: 300px;
        box-shadow: rgba(0, 0, 0, 0.4);
        align-self: center;
        justify-self: center;
        z-index: 10000000;
    }
    dialog::backdrop{
         z-index: 10000000;
    }
    dialog .wrapper{
        position: relative;
        width: 100%;
        height: 100%;
        padding: 20px;
        padding-top: 30px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
    }
    .div{
        width: 100%;
        display: flex;
        justify-content: end;
    }
    dialog button{
        border: 0;
        outline: 0;
        color: #fff;
        font-size: 1rem;
        padding: 10px 7px;
        border-radius: 5px;
        background-color: rgb(12, 48, 15);   
    }
     .show{
         display: flex;
        }
        .loader {
            border: 8px solid #02160f;
            border-top: 8px solid #c7f5d6;
            border-left: 8px solid #c7f5d6;
            border-radius:0 0  50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear  infinite;
            position: absolute;
            top: 50vh;
            left: 50vw;
            display: none;
            
             z-index: 100;
        }

        @keyframes spin {
            0% {
                transform: scale(1)
                rotate(0deg) ;
            }25%{
                transform: scale(1.1)
                rotate(0deg);
            }
            50% {
                transform: scale(1.2)
                rotate(360deg); 

            }
            100% {
                transform: scale(1)
                rotate(720deg);
            }
    
        }
        @keyframes twirl {
            0% {
                transform: rotate(0deg);
            }
            100% {
                transform: rotate(360deg);
            }
        }
        @keyframes glow {
            0% {
                box-shadow: 0 0 5px #c7f5d6, 0 0 10px #c7f5d6, 0 0 15px #c7f5d6;
            }
            100% {
                box-shadow: 0 0 10px #c7f5d6, 0 0 20px #c7f5d6, 0 0 30px #c7f5d6;
            }
        }
    </style>
    <div class="wrapper">
    <div class="loader" id="load"></div>
</div>

<div class="profile-form">
    <h2>edit your profile</h2>
        <form action="" id="user">
            <div class="form-field">
                <label for="name">Name</label>
                <input type="text" id="name" name="username" value="<% if (user.username) { %><%= user.username %><% } %>" required></div>
            <div class="form-field">
                <label for="company">company Name</label>
                <input type="text" id="company" name="company" required></div>
            <div class="form-field">
                <label for="level">Position In Company</label>
                <input type="text" id="level" name="level" required></div>
            <div class="form-field">
                <label for="tel">Phone no.</label>
                <input type="text"  id="tel"name="tel" required></div>
            <div class="form-field">
                 <label for="address">Delivery Address</label>
                <textarea type="text" id="address" name="address" required></textarea></div>
                <button id="save">save</button>
        </form>
    </div>
<dialog id="pop" class="pop">
    <div class="wrapper">
       <h2 id="msg">
    </h2>  
    <div class="div"> <button type="button" id="close" onclick="pop.close()">
    close
   </button></div>
   
    </div>
</dialog>
<script src="../js/profile.js"></script>
<script>
    const showus = (message)=>{
        msg.textContent=message;
        pop.showModal()
    }
</script>

    
